<html>
    <head>
        <title>Machine {{inventory_hostname}}</title>
    </head>
    <body>
        <p>{{inventory_hostname}}</p>
        <h1>{{ansible_architecture}}</h1>
        <p>IP:</p>
        <ul>
            {% if ansible_distribution == 'Debian' %}
            {% for ip in ansible_all_ipv4_addresses %}
            <li>{{ip}}</li>
            {% endfor %}
            {% else %}
            {% for ip in ansible_ip_addresses %}
            <li>{{ip}}</li>
            {% endfor %}
            {% endif %}
        </ul>
    </body>
</html>